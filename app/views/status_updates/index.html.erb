<h1>Listing status_updates</h1>

<table>
  <tr>
    <th>Rubyist</th>
    <th>Twitter</th>
    <th>Original text</th>
    <th>Translated text</th>
  </tr>

<% @status_updates.each do |status_update| %>
  <tr>
    <td><%=h status_update.rubyist_id %></td>
    <td><%=h status_update.twitter_id %></td>
    <td><%=h status_update.original_text %></td>
    <td><%=h status_update.translated_text %></td>
    <td><%= link_to 'Show', status_update %></td>
    <td><%= link_to 'Edit', edit_status_update_path(status_update) %></td>
    <td><%= link_to 'Destroy', status_update, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New status_update', new_status_update_path %>